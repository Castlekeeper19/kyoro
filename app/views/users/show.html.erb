<div class="container">
  <div class="m-3">
    <div class="user-info">
      <h1><strong><em><%= @user.name %></strong></em></h1>
      <h2><%= @user.role %></h2>
    </div>
      <h3 class="user-goal">Goal: "<%= @user.goal %>"</h3>

    <div class ="d-flex">
      <%= image_tag User.find(@user.id).photo.attached? ? cl_image_path(User.find(@user.id).photo.key) : "https://que-akitsu.com/wp-content/plugins/all-in-one-seo-pack/images/default-user-image.png", class: "user-image" %></br>
<!-- added bar chart  -->
      <div style= "width: 800px">
        <%= bar_chart(mood: @user.overall("mood"), support: @user.overall("support"), motivation: @user.overall("motivation"), personal_goals: @user.overall("personal_goals")) %>
      </div>
    </div>
    <table class="table mt-3">
      <thead>
        <tr>
          <th scope="col">Agreed schedule</th>
          <th scope="col">Monday</th>
          <th scope="col">Tuesday</th>
          <th scope="col">Wednesday</th>
          <th scope="col">Thursday</th>
          <th scope="col">Friday</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">START TIME</th>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <th scope="row">BREAK TIME</th>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <th scope="row">END TIME</th>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
