<div class="container">
  <h1> <%= User.first.company %> </h1>

  <div class= "d-flex justify-content-between">
    <div>
      <div class="d-flex align-items-end">
        <div class = "mood-square bg-primary", style = "height: <%= 3* @team_mood %>px; width: <%= 3* @team_mood %>px; border-top-left-radius: 100%; margin: 8px; ">
          <h2> <%= @team_mood %>% </h2>
          <h2>Mood</h2>
        </div>
        <div class = "support-square bg-primary", style = "height: <%= 3* @team_support %>px; width: <%= 3* @team_support %>px; border-top-right-radius: 100%; margin: 8px; ">
          <h2> <%= @team_support %>% </h2>
          <h2>Communication</h2>
        </div>
      </div>
      <div class="d-flex align-items-start">
        <div class = "motivation-square bg-primary", style = "height: <%= 3* @team_motivation %>px; width: <%= 3* @team_motivation %>px; border-bottom-left-radius: 100%; margin: 8px; text-align: right ">
          <h2>Motivation</h2>
          <h2> <%= @team_motivation %>% </h2>

        </div>
        <div class = "motivation-square bg-primary", style = "height: <%= 3* @team_motivation %>px; width: <%= 3* @team_motivation %>px; border-bottom-right-radius: 100%; margin: 8px; ">
          <h2> <%= @team_goals %>% </h2>
          <h2>Reaching Goals</h2>
        </div>
      </div>
    </div>
  <div class="dashboard-survey">
    <div class="d-flex justify-content-between">
      <div></div>
      <div>
    <h2><%= link_to "Latest Survey", survey_path(@survey) %></h2>
       <p> <%= @survey.name %> </p>
       <p> <%= @survey.content %> </p>
       <p> Survey Responses: <%= @survey.response_number %> of <%= User.all.count %> </p>
         <div
            class="ldBar label-center bar-<%= @survey.id %>"
            data-stroke="data:ldbar/res,gradient(0,1,#9df,#fd9)",
            data-value="<%= @survey.response_rate %>"
            data-preset="circle"
            style="width: 80%; height: 80%;"
            data-id="<%= @survey.id %>"
          ></div>
        </div>
      </div>
      </div>
    </div>

      <h2> Overall Engagement</h2>
       <%= area_chart UserAnswer.group_by_week(:response_date).sum(:answer_score) %>
  </div>
</div>









