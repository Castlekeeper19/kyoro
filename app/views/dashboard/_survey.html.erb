<%= link_to survey_path(@survey) do %>
<div class="dashboard-survey">
  <div>
    <h3 class = "border-bottom">Latest Survey<%# link_to "Latest Survey", survey_path(@survey) %></h3>
    <p><%= @survey.name %></p>
  </div>
  <div
    class="ldBar label-center bar-<%= @survey.id %>"
    <%# data-stroke="data:ldbar/res,gradient(0,1,#9df,#fd9)", %>
    data-stroke="data:ldbar/res,gradient(0,1,<%= @survey.response_color%> )",
    data-value="<%= @survey.response_rate %>"
    data-preset="circle"
    style="width: 80%; height: 80%;"
    data-id="<%= @survey.id %>"
  ></div>
  <div class="dashboard-survey-details">
    <p>Sent: <%= @survey.date_sent.strftime("%-d %B %Y")%></p>
    <p>Responses: <%= @survey.response_number %> of <%= User.all.count %></p>
  </div>
</div>
<% end %>
